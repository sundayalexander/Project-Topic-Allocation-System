    <meta name="keywords" content="Undergraduate Project Topics Allocation System" />
    {% endblock %}
{% block body %}
	<div class="main-content">
		<!--left-fixed -navigation-->
		<div class="sidebar" role="navigation">
            <div class="navbar-collapse">
				<nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
					<ul class="nav" id="side-menu">
						<li>
							<a href="{{ path('supervisor_dashboard') }}" class="active"><i class="fa fa-dashboard nav_icon"></i>Dashboard</a>
						</li>
						<li>
							<a href="{{ path('supervisor_add_topic') }}"><i class="fa fa-edit nav_icon"></i>Add Topic</a>
							<!-- /nav-second-level -->
						</li>
						<li>
							<a href="{{ path('supervisor_view_topics') }}"><i class="fa fa-book nav_icon"></i>View Topics</a>
							<!-- /nav-second-level -->
